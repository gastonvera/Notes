<div class="row d-flex justify-content">
    {{#each notes}}
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title d-flex justify-content">
                    {{title}} <a href="/notes/edit/{{_id}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </h3>
            </div>
            <div class="card-body">
                <p>{{content}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block" type="submit" type="submit">Delete</button>
                </form>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">No hay notas aun</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crea una</a>
            </div>
        </div>
        {{/each}}
    </div>